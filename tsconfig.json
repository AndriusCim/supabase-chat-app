{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": "src",
    "jsx": "react",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es2019",
      "es2020",
      "esNext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "rootDir": "../",
    "target": "es5",
    "sourceMap": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "useUnknownInCatchVariables": false
  },
  "exclude": [
    "node_modules/*",
    "build",
    "dist",
    "webpack.*",
    "coverage",
    "fileTransformer.js",
    "jest.init.js",
    "storybook-static",
    "tools"
  ]
}